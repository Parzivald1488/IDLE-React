{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // позволяет работать с пакетами, которые используют common js, как с обычными пакетами с помошью import 
    "allowSyntheticDefaultImports": true,
    // автоматически добавляет в библиотеки export default если его нет
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}